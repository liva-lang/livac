// Test: => one-liner syntax for if, for, while

main() {
    let x = 10

    // if => one-liner
    if x > 5 => print("big")

    // if => with else =>
    if x > 20 => print("huge") else => print("not huge")

    // for => one-liner
    let items = [1, 2, 3]
    for item in items => print(item)

    // while => one-liner
    let i = 0
    while i < 3 => i = i + 1

    // Point-free / bare identifier (no parentheses) â€” parsed as expression statement
    for item in items => print
    if x > 5 => print
    while i < 3 => print

    // => with assignment
    let count = 0
    for item in items => count = count + 1
    if x > 5 => count = count + 10

    // => with method call
    let results: [number] = []
    for item in items => results.push(item)
}
