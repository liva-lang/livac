// ============================================================================
// Test 2: Named Imports - Classes
// ============================================================================

import { Circle, Rectangle, createSquare, createUnitCircle } from "./lib/shapes.liva"

main() {
    print("=== Test 2: Named Class Imports ===")
    print("")
    
    // Create instances directly
    let circle = Circle(5)
    let rect = Rectangle(4, 6)
    
    // Create via factory functions
    let square = createSquare(3)
    let unit = createUnitCircle()
    
    // Test Circle
    print(circle.describe())
    print($"  Area: {circle.area()}")
    print($"  Circumference: {circle.circumference()}")
    print("")
    
    // Test Rectangle
    print(rect.describe())
    print($"  Area: {rect.area()}")
    print($"  Perimeter: {rect.perimeter()}")
    print($"  Is square: {rect.isSquare()}")
    print("")
    
    // Test Square (via factory)
    print(square.describe())
    print($"  Area: {square.area()}")
    print($"  Is square: {square.isSquare()}")
    print("")
    
    // Test Unit Circle (via factory)
    print(unit.describe())
    print($"  Area: {unit.area()}")
    
    print("")
    print("âœ… Test 2 PASSED: Named class imports work!")
}
