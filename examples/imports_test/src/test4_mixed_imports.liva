// Test 4: Mixed Import Styles
// ============================================================================

import { add, subtract } from "./lib/math.liva"
import * as strings from "./lib/strings.liva"
import { Circle } from "./lib/shapes.liva"

main() {
    print("=== Test 4: Mixed Import Styles ===")
    print("")
    
    // Named function imports
    let sum = add(100, 200)
    let diff = subtract(100, 200)
    print($"Named imports: add(100,200)={sum}, subtract(100,200)={diff}")
    
    // Wildcard with alias
    let wrapped = strings.wrap("42", "[", "]")
    let repeated = strings.repeat("*", 10)
    print($"Alias imports: wrap('42', '[', ']')='{wrapped}'")
    print($"Alias imports: repeat('*', 10)='{repeated}'")
    
    // Class import
    let c = Circle(10)
    print($"Class import: {c.describe()}, area={c.area()}")
    
    print("")
    print("âœ… Test 4 PASSED: Mixed import styles work together!")
}
